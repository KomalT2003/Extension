
{
  "manifest_version": 3,
  "name": "Summarizer",
  "version": "1.0",
  "description": "This is an Summarizer extension that summarizes the content of the page and displays it in a popup.",
  "permissions": [
    
    "http://localhost:3000/*",
    "activeTab",
    "scripting",
    "http://127.0.0.1:3000/*"
    
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
